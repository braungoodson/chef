#!/bin/sh
chefdirectory=~/chef
chefrecipedirectory=$chefdirectory/recipe
paas=$chefrecipedirectory/paas
virtualboxinstaller=virtualboxinstaller
virtualboxdirectory=$pass/virtualbox
virtualboxinstallerurl=http://dlc.sun.com.edgesuite.net/virtualbox/4.2.18/VirtualBox-4.2.18-88780-OSX.dmg
mkdir -p $paas
cd $paas
curl -o $virtualboxinstaller $virtualboxinstallerurl
hdiutil mount $virtualboxinstaller -mountpoint $virtualboxdirectory
